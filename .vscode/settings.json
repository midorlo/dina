{
  // Use workspace TypeScript and ESLint (Flat Config)
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "eslint.useFlatConfig": true,
  "eslint.packageManager": "npm",
  "eslint.workingDirectories": [
    { "directory": "./frontend", "changeProcessCWD": true }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "json",
    "jsonc"
  ],

  // Format with Prettier and also run ESLint fixes on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Avoid conflicting formatters
  "vue.format.enable": false,

  // Keep noise low
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true
  },

  // Align with project style
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Prefer Volar (Vue 3)
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}

